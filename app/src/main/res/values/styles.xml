<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalendarDateText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="CalendarWeekText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="Theme.CourseworkApp.CenteredDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- Make dialog background rounded -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.CourseworkApp.Dialog</item>
        <!-- Dimming behind -->
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowBackground">@color/surface_white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ShapeAppearance.CourseworkApp.Dialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>



</resources>